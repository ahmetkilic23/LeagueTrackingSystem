@using MvcWebProjesi.Models;
@model  List<PlayerRatingViewModel>

@{
    ViewBag.Title = "Player_1";
}

<main role="main">
    <!-- TOP SECTION -->
    <header class="grid">
        <div class="s-12 padding-2x">
            <h1 class="text-strong text-white text-center center text-size-60 text-uppercase margin-bottom-20">Players</h1>
        </div>
    </header>

    <!-- SECTION 1 -->
    <section class="grid margin-bottom-20">
        <!-- Contact Information-->
        @using (Html.BeginForm())
        {
            <div class="s-12 padding-2x background-white text-center">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Player</th>
                            <th scope="col">Name</th>
                            <th scope="col">Country</th>
                            <th scope="col">Age</th>
                            <th scope="col">Rating</th>
                            <th scope="col">Player Value</th>
                            <th scope="col">Team</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img src="@item.PLVM.Player.Image"></td>
                                <td>@item.PLVM.Player.PlayerName</td>
                                <td>@item.PLVM.Player.Country</td>
                                <td>@item.PlayerAttributes.Age</td>
                                <td>@item.PlayerAttributes.Rating</td>
                                <td>@item.PlayerAttributes.PlayerValue €</td>
                                <td><img style="width:85px; height:110px;" src="@item.PLVM.Logo"></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        }
    </section>
</main>


